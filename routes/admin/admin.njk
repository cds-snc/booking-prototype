{% extends "base-logged-in.njk" %}

{% block morecontent %}

    <h1>Admin Page</h1>

    <div>
        <a href="create-event">Create a new event</a>
    </div>
    <h2>Your Events</h2>
    {% for item in eventData %}
    {% set link = 'book?id=' + item.event_id %}

    <div>
        <span>{{item.event_name}}, <i>{{item.event_description}}</i>, <a href={{link}}>{{item.event_name}} booking page</a></span>
    </div>
    {% endfor %}
{% endblock %}
