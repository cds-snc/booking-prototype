{% extends "base-logged-in.njk" %}

{% block morecontent %}

    <h1>Create a new event</h1>

    <div>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            {{ textInput('event_name', 'form.event_name.desc', { required: true }) }}
            {{ textInput('event_location', 'form.event_location.desc') }}
            {{ textInput('event_description', 'form.event_description.desc') }}
            {{ radioButtons('event_duration', {'1': '15 minutes', '2': '30 minutes', '3': '45 minutes', '4': '1 hour'}, data.event_duration, 'form.event_duration.desc', errors, { required: true } )}}
            {{ radioButtons('date_range', {'1': '30 days', '2': '60 days', '3': '90 days'}, data.date_range, 'form.date_range.desc', errors, { hint:'form.date_range.hint', required: true } )}}
            {{ checkBoxes('available_days_of_week', {'1':'Monday','2':'Tuesday', '3': 'Wednesday', '4':'Thursday', '5': 'Friday'}, data.available_days_of_week, 'form.available_days_of_week', errors, {hint: 'form.available_days_of_week.desc', required: true}) }}
            {{ dropdown('start_time', {'1': '1:00am', '2':'2:00am', '3':'3:00am', '4':'4:00am', '5':'5:00am', '6':'6:00am', '7':'7:00am', '8':'8:00am', '9':'9:00am', '10':'10:00am', '11':'11:00am', '12':'noon', '13':'1:00pm', '14':'2:00pm', '15':'3:00pm', '16':'4:00pm', '17':'5:00pm', '18':'6:00pm', '19':'7:00pm', '20':'8:00pm', '21':'9:00pm', '22':'10:00pm', '23':'11:00pm'}, 'form.start_time.desc', { selected: '9:00am' }) }}
            {{ dropdown('end_time', {'2':'2:00am', '3':'3:00am', '4':'4:00am', '5':'5:00am', '6':'6:00am', '7':'7:00am', '8':'8:00am', '9':'9:00am', '10':'10:00am', '11':'11:00am', '12':'noon', '13':'1:00pm', '14':'2:00pm', '15':'3:00pm', '16':'4:00pm', '17':'5:00pm', '18':'6:00pm', '19':'7:00pm', '20':'8:00pm', '21':'9:00pm', '22':'10:00pm', '23':'11:00pm', '24': 'midnight'}, 'form.end_time.desc', { selected: '5:00pm' }) }}
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
