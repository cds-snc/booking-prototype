{% extends "base.njk" %}

{% block content %}

    <h1>Create an account</h1>

    <div>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            {{ textInput('fullname', 'form.fullname.label') }}
            {{ textInput('email', 'form.email.label', {hint: "form.email.hint"}) }}
            {{ textInput('password', 'form.password.label', {hint: "form.password.hint", type: "password"}) }}
            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
